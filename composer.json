{
    "name": "orba/magento2-codegen",
    "description": "Magento 2 Code Generator",
    "version": "1.0.0",
    "require": {
        "php": "~7.2",
        "ext-dom": "*",
        "ext-libxml": "*",
        "instinct/kernel": "4.2",
        "symfony/dependency-injection": "^4.0",
        "symfony/config": "^4.0",
        "symfony/console": "^4.0",
        "symfony/yaml": "^4.0",
        "symfony/filesystem": "^4.0",
        "symfony/finder": "^4.0",
        "twig/twig": "^3.0",
        "nikic/php-parser": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Orba\\Magento2Codegen\\": "src/Orba/Magento2Codegen/"
        }
    },
    "scripts": {
        "setPermissionsBin": "chmod -R +x bin",
        "post-install-cmd": [
            "@setPermissionsBin"
        ],
        "post-update-cmd": [
            "@setPermissionsBin"
        ]
    },
    "bin": ["bin/codegen"],
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        },
        {
            "type": "git",
            "url": "https://github.com/alquerci/kernel.git"
        }
    ],
    "require-dev": {
        "ext-simplexml": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "phpunit/phpunit": "^8",
        "symfony/http-client": "^5.0"
    }
}
