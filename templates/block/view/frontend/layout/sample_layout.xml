<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <!-- use this code in proper place in your layout file -->
            <block class="${Vendorname}\${Modulename}\Block\${Block_name}"
                   name="${vendorname}.${modulename}.${block_name}"
                   template="${Vendorname}_${Modulename}::${block_name}.phtml"/>
            <!-- end use -->
        </referenceContainer>
    </body>
</page>