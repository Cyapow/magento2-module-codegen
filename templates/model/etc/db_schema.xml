<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="${vendorname}_${modulename}_${entityname}" resource="default" engine="innodb" comment="${Entityname} Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="${entityname} Id"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="${Entityname} Name"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="${vendorname}_${modulename}_${entityname}_NAME" indexType="fulltext">
            <column name="name"/>
        </index>
    </table>
</schema>